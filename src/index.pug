include pug/mixins.pug

mixin OurCatalogItem(img, title)
    -let bg = "assets/images/catalog/" + img
    a(href="").our__catalog__item
        img(src= bg, alt="").bg
        span=title

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        include pug/head.pug
    body
        +Infobar()
        section.banner__slider
            +Navbar()
            .owl-carousel
                .slider__item
                    img(src="assets/images/banner_slider/1.jpg", alt="").bg
                    .container
                        .text__wrapper
                            span.text__black Мебель для персонала
                            span.text__red от эконом до премиум класса
                                .clipped
                .slider__item
                    img(src="assets/images/banner_slider/1.jpg", alt="").bg
                    .container
                        .text__wrapper
                            span.text__black Мебель для персонала
                            span.text__red от эконом до премиум класса
                                .clipped
            .owl-dots
        section.our__catalog
            .container
                h2.title Наш каталог
                .our__catalog__wrapper
                    +OurCatalogItem('1.jpg', 'Мебель для персонала')
                    +OurCatalogItem('1.jpg', 'Кабинеты руководителя')
                    +OurCatalogItem('1.jpg', 'Офисные кресла')
                    +OurCatalogItem('1.jpg', 'Офисные диваны')
                    +OurCatalogItem('1.jpg', 'Модульная мягкая мебель')
                    +OurCatalogItem('1.jpg', 'Стойки ресепшн')
                    +OurCatalogItem('1.jpg', 'Столы переговоров')
                    +OurCatalogItem('1.jpg', 'Офисные перегородки')
                    +OurCatalogItem('1.jpg', 'Многоместные секции')
                    +OurCatalogItem('1.jpg', 'Металлическая мебель')
                    +OurCatalogItem('1.jpg', 'Сейфы')
                    +OurCatalogItem('1.jpg', 'Гостинная мебель')
                    


        include pug/scripts.pug
        <svg class="svg">
            <clipPath id="my-clip-path" clipPathUnits="objectBoundingBox"><path d="M1,0.5 L0,1 L0,0 L1,0.5"></path></clipPath>
        </svg>